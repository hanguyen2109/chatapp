<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@color/black"
        android:id="@+id/ImageViewImageUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:background="@drawable/custom_recycler_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_200"
        android:orientation="vertical"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/CircleImageViewUser"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_96"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_18"
                android:foregroundGravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/dp_12" />

            <TextView
                android:id="@+id/TextViewNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginEnd="@dimen/dp_80"
                android:layout_toEndOf="@+id/CircleImageViewUser"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_80"
                android:layout_toRightOf="@+id/CircleImageViewUser" />

            <TextView
                android:id="@+id/TextViewEmailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextViewNameUser"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toEndOf="@+id/CircleImageViewUser"
                android:textColor="@color/tabTextColor"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_toRightOf="@+id/CircleImageViewUser" />

            <ImageButton
                android:id="@+id/ImageButtonEditProfile"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginEnd="@dimen/dp_25"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/ic_edit"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:layout_alignParentBottom="true"
                android:background="@color/grey3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/ImageViewLanguage"
                android:layout_width="@dimen/sp_24"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_12"
                android:foregroundGravity="center"
                android:src="@drawable/ic_global"
                android:layout_marginLeft="@dimen/dp_12" />

            <TextView
                android:id="@+id/TextViewTitleLanguage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_toEndOf="@+id/ImageViewLanguage"
                android:gravity="center_vertical"
                android:text="@string/txt_language"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/ImageViewLanguage" />

            <TextView
                android:layout_toStartOf="@+id/imageButtonChangeLanguage"
                android:text="@string/txt_language_vi"
                android:id="@+id/TextViewLanguage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_16"
                android:layout_toLeftOf="@+id/imageButtonChangeLanguage" />

            <ImageButton
                android:id="@+id/imageButtonChangeLanguage"
                android:scaleType="center"
                android:background="@null"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12.4dp"
                android:src="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12.4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_alignParentBottom="true"
                android:background="@color/grey3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/ImageViewNotification"
                android:layout_width="@dimen/dp_19"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_12"
                android:foregroundGravity="center"
                android:src="@drawable/ic_notification"
                android:layout_marginLeft="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_23"
                android:layout_toEndOf="@+id/ImageViewNotification"
                android:gravity="center_vertical"
                android:text="@string/txt_notification"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/ImageViewNotification" />

            <ImageButton
                android:scaleType="center"
                android:background="@null"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_12.4"
                android:foregroundGravity="center"
                android:src="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12.4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_alignParentBottom="true"
                android:background="@color/grey3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/ImageViewVersion"
                android:layout_width="@dimen/dp_24"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_12"
                android:foregroundGravity="center"
                android:src="@drawable/ic_version"
                android:layout_marginLeft="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_toEndOf="@+id/ImageViewVersion"
                android:gravity="center_vertical"
                android:text="@string/txt_version"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/sp_18"
                android:layout_toRightOf="@+id/ImageViewVersion" />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_12"
                android:gravity="center"
                android:text="@string/txt_hint_version"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:layout_alignParentBottom="true"
                android:background="@color/grey3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutLogout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/ImageViewLogout"
                android:layout_width="@dimen/dp_24"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_12"
                android:foregroundGravity="center"
                android:src="@drawable/ic_logout"
                android:layout_marginLeft="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_toEndOf="@+id/ImageViewLogout"
                android:text="@string/txt_logout"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_toRightOf="@+id/ImageViewLogout" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>