<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeItemFriend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10"
    android:weightSum="4">
    <ImageView
        android:id="@+id/imageFriendChat"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:foregroundGravity="center"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:visibility="gone"
        android:padding="@dimen/dp_3"
        android:id="@+id/textViewSumNotRead"
        android:background="@drawable/sum_not_read"
        android:textSize="@dimen/sp_11"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content"
        tools:ignore="SmallSp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_50" />
    <TextView
        android:layout_toRightOf="@+id/imageFriendChat"
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        />

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/textViewTimeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_12"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_below="@+id/textViewUserName"
        android:layout_toRightOf="@+id/imageFriendChat"
        android:id="@+id/textViewLastMess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:textColor="@color/grey"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_below="@+id/imageFriendChat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/line" />

</RelativeLayout>