<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textChatDate"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />
    <RelativeLayout
        android:layout_below="@+id/textChatDate"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2">

        <ImageView
            android:id="@+id/imageUserChat"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_launcher" />

        <View
            android:id="@+id/viewChat"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_toRightOf="@+id/imageUserChat"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageMessChat"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/viewChat"
            android:padding="@dimen/dp_8"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:textSize="@dimen/sp_16" />
        <ImageView
            android:layout_below="@+id/imageMessChat"
            android:id="@+id/imageSickerMessChat"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/viewChat"
            android:padding="@dimen/dp_8"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:textSize="@dimen/sp_16" />
        <RelativeLayout
            android:background="@drawable/custom_mess_chat_left"
            android:id="@+id/relativePlay"
            android:layout_below="@+id/imageSickerMessChat"
            android:layout_toRightOf="@+id/viewChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_play"
                android:id="@+id/imageButtonPlayRecord"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <SeekBar
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/imageButtonPlayRecord"
                android:id="@+id/viewPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageButtonPlayRecord" />
            <TextView
                android:layout_marginTop="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/viewPlay"
                android:layout_alignParentTop="true"
                android:visibility="visible"
                android:scaleType="fitXY"
                android:text="dsdsd"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:padding="@dimen/dp_8"
                android:id="@+id/textTimeRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textMessChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativePlay"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/viewChat"
            android:background="@drawable/custom_mess_chat_left"
            android:padding="8dp"
            android:text="sdfasjdkfhaskdf"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/viewChat" />
        <TextView
            android:visibility="gone"
            android:id="@+id/textMessChatDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textMessChat"
            android:layout_marginLeft="@dimen/dp_35"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

</RelativeLayout>