<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">


    <ImageView
        android:paddingTop="@dimen/dp_10"
        android:id="@+id/imageTab"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chat"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/notificationTab"
        android:background="@drawable/sum_not_read"
        android:textSize="@dimen/sp_11"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/imageTab"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_10"

        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/textTab"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#4356B4"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/txt_message"
        android:layout_below="@+id/imageTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>