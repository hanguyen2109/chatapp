<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relativeItemFriend"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageCricleItemFriend"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50" />
    <LinearLayout
        android:layout_toRightOf="@+id/imageCricleItemFriend"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewNameItemUser"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight = "3"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_0"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonRequestItemFriend"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxWidth="@dimen/dp_0"
            android:background="@drawable/custom_login_enable"
            android:text="@string/txt_friend"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_35"/>

    </LinearLayout>

</RelativeLayout>