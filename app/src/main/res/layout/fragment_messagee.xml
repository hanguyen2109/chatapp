<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/background_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayoutSearchMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextSearchUserChat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_40"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/custom_search_message"
            android:drawableStart="@drawable/search"
            android:hint="@string/txt_search_message"
            android:padding="@dimen/dp_5"
            android:drawableLeft="@drawable/search" />

        <ImageButton
            android:id="@+id/imageButtonDelete"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
           android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_65"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/delete"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewTitleMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/txt_message"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/message1" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_100"
        android:clipToPadding="false"
        android:background="@drawable/custom_recycler_message"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayoutSearchMessage"
        tools:listitem="@layout/item_message" />

    <ImageView
        android:id="@+id/imageNotSearchMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayoutSearchMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>