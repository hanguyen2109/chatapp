<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textChatDate"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_25"
        android:layout_below="@+id/textChatDate"
        android:padding="@dimen/dp_2"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/imageUserChat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:visibility="gone" />

        <View
            android:layout_toLeftOf="@+id/imageUserChat"
            android:id="@+id/viewChat"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"

            />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageMessChat"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/viewChat"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/viewChat" />
        <ImageView
            android:layout_below="@+id/imageMessChat"
            android:scaleType="fitXY"
            android:id="@+id/imageSickerMessChat"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/viewChat"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/viewChat"
            android:layout_alignParentRight="true" />
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/relativePlay"
            android:layout_below="@+id/imageSickerMessChat"
            android:layout_toLeftOf="@+id/viewChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/viewChat"
            android:layout_alignParentStart="true">
        <ImageButton
            android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_play_circle"
                android:id="@+id/imageButtonPlayRecord"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_100" />
            <SeekBar
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="-100dp"
                android:layout_toLeftOf="@+id/textTimeRecord"
                android:background="@drawable/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@+id/imageButtonPlayRecord"
                android:id="@+id/viewPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageButtonPlayRecord"
                android:layout_toStartOf="@+id/textTimeRecord"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginStart="-100dp" />
            <TextView
                android:layout_marginTop="@dimen/dp_18"
                android:layout_below="@+id/viewPlay"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:background="@drawable/white"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:padding="@dimen/dp_8"
                android:id="@+id/textTimeRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/textMessChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativePlay"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_mess_chat_right"
            android:padding="@dimen/dp_8"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/textMessChatDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textMessChat"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</RelativeLayout>